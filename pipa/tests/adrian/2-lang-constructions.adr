-- Protocol Tests
py#print("Protocol Tests:")
protocol Node1 {
    fun printNode(): Void
}

struct VarDecl1 is Node1 {
    name: py#Str

    fun printNode(): Void {
        py#print(py#Str("I am a variable declaration!"))
        py#print(py#Str("My name is "), self.name)
    }
}

let aDecl = VarDecl1(py#Str("a"))
aDecl.printNode()

